@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>WEBA CA1</title>


		@*<link rel="stylesheet" href="~/css/typesettings-1.1.css" />*@
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
		<link rel="stylesheet" href="~/css/site.css" />
		<link rel="stylesheet" href="~/css/noty_custom.css" />
        <link rel="stylesheet" href="~/css/sticky_footer.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-multiselect/dist/css/bootstrap-multiselect.css" type="text/css" />
        <link rel="stylesheet" href="~/lib/bootstrap-daterangepicker/daterangepicker.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css"> 


           

		@*<script src="~/lib/jquery/dist/jquery.js"></script>*@
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.4.min.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
		<script src="~/lib/noty/js/noty/jquery.noty.js"></script>
		<script src="~/lib/moment/min/moment.min.js"></script>
		<script src="~/lib/noty/js/noty/packaged/jquery.noty.packaged.js"></script>
        <script src="~/lib/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>
        <script src="~/lib/bootstrap-daterangepicker/daterangepicker.js"></script>
        @*<script src="~/lib/bootstrap-daterangepicker/package.js"></script>*@
        <script src="~/lib/bootstrap-validator/dist/validator.min.js"></script>
        @*<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js"></script>*@
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>




</head>
<body>
<div id="wrap">
	@if (User.Identity.IsAuthenticated)
	{
    <!-- Wrap all page content here -->


        <!-- Fixed navbar -->
		<div class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a asp-controller="Home" class="navbar-brand" asp-action="Index">Online Pet Shop Management System</a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">

							<li class="dropdown ">
							<a href="#" id="drop2" data-toggle="dropdown" class="dropdown-toggle" role="button">
																		Category <b class="caret"></b></a>
							<ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
								<li><a asp-controller="Categories" asp-action="Index">Manage Category</a></li>
                                <li><a asp-controller="Categories" asp-action="Create">Create Category</a></li>
							</ul>
						</li>

                        <li class="dropdown ">
                            <a href="#" id="drop2" data-toggle="dropdown" class="dropdown-toggle" role="button">
                                Brands <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
                                <li><a asp-controller="Brands" asp-action="Index">Manage Brand</a></li>
                                <li><a asp-controller="Brands" asp-action="Create">Create Brand</a></li>
                            </ul>
                        </li>

                        @if (User.IsInRole("ADMIN") || User.IsInRole("MASTER"))
                        {
                            <li><a asp-controller="UserManager" asp-action="Index">Manage User</a></li>
                        }
						
					</ul>
					@await Html.PartialAsync("_LoginPartial")
				</div><!--/.nav-collapse -->
			</div>
		</div>
        <br>
        <br>
    }
    else
    {
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a asp-controller="Home" asp-action="Index" class="navbar-brand">Online Pet Shop Management System</a>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav"></ul>
					@await Html.PartialAsync("_LoginPartial")
				</div>
			</div>
		</div>

		}

		<div class="container body-content">
			@RenderBody()
		</div>
		@RenderSection("scripts", required: false)
	</div><!-- end of div with id="wrap"-->
    <footer class="footer">
        <div class="container">
            <p class="text-muted">Chua Bing Quan (2016/2017) </p>
        </div>
 </footer>




</body>
</html>
